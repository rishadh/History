@model Class_Room.Models.Course

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <div class="container mt-3" style="height:50%" id="regForm">
        <h4>Course</h4>
        <hr>
        <div class="form-group row">
            <div class="col-sm">
                <label for="tl"><b>Title</b></label><br>
                <input type="text" placeholder="Enter Course Title" name="tl" id="tl" autocomplete="off">
                <div id="tl_error" class="error" style="color:red"></div>
            </div>

            <div class="col-sm">
                <label for="cr"><b>Credit</b></label><br>
                <input type="text" placeholder="Enter Course Credit" name="cr" id="cr" autocomplete="off">
                <div id="cr_error" class="error" style="color:red"></div>
            </div>

            <div class="col-sm">
                <label for="lc"><b>Lecture</b></label><br>
                <select id="op1"></select>
                <div id="lc_error" class="error" style="color:red"></div>
            </div>
            <hr>
            <div class="form-group">
                <div class="col-sm">
                    <button ID="submit" onclick="ajaxEdit()" class="btn btn-warning">SAVE</button>
                    <button ID="submit" onclick="window.history.back()" class="btn btn-success">CANCEL</button>
                </div>
            </div>
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/Script/Course/CreateScript.js"></script>
    <link href="~/Content/Style/StyleSheet.css" rel="stylesheet" />
</body>
</html>


