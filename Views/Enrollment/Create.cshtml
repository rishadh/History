@model Class_Room.Models.Enrollment

@{
    ViewBag.Title = "Create";
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <div class="container mt-3" style="height:50%" id="regForm">
        <h2>Enroll Here!</h2>
        <hr>
        <div class="form-group row">
            <div class="col-sm">
                <label for="cn"><b>Select Course Name</b></label><br>
                 <select id="op1"></select>
                <div id="cn_error" class="error" style="color:red"></div>
            </div>

            <div class="col-sm">
                <label for="sn"><b>Select Student Name</b></label><br>
                <select id="op2"></select>
                <div id="sn_error" class="error" style="color:red"></div>
            </div>

            <div class="col-sm">
                <label for="ac"><b></b>Academic Year</label><br>
                <input type="text" placeholder="Enter Your Academic Year" name="ac" id="ac" autocomplete="off">
                <div id="ac_error" class="error" style="color:red"></div>
            </div>
            <hr>
            <div class="form-group">
                <div class="col-sm">
                    <button ID="submit" onclick="ajaxCreate()" class="btn btn-warning">SAVE</button>
                    <button onclick="window.history.back()" class="btn btn-success">CANCEL</button>
                </div>
            </div>
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/Script/Enrollment/CreateScript.js"></script>
    <link href="~/Content/Style/StyleSheet.css" rel="stylesheet" />
</body>
</html>

